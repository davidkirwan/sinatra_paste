<html>
<head>
<title>Paste</title>
</head>
<script src="/js/jquery-2.1.3.min.js"></script>
<script src="/js/jquery-1.11.0.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/prism.js"></script>
<link rel="stylesheet" href="/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/bootstrap-theme.min.css">
<link rel="stylesheet" href="/css/prism.css">

<script src="/js/main.js"></script>
<link href="/css/main.css" rel="stylesheet" />

<body>
<h1>Paste</h1>
  <div class="container-fluid">
    <div class="row-fluid">
      <form>
        <div class="col-md-12">
          <input class="paste-title" onclick="empty_title();" type="text" name="paste_title" id="paste_title" value="Enter title"></input>
        </div>
        <div class="col-md-12">
          <textarea class="form-control paste-input" onclick="empty_box();" name="paste_input" id="paste_input">Enter text</textarea>
        </div>
        <div class="col-md-2">
          <select name="paste_language" id="paste_language">
            <option value="1" selected>Text</option>
            <option value="2">Javascript</option>
            <option value="3">Python</option>
            <option value="4">Ruby</option>
            <option value="5">C</option>
            <option value="6">C++</option>
            <option value="7">Java</option>
          </select>
        </div>
      </form>
      <button id="post_button" onmousedown="ajax_post();">Submit</button>
      <button id="post_button" onmousedown="clear_fields();">Clear</button>
    </row>
  </div>
<h3>Response</h3>
<pre id="result"></pre>
</br>
<p>
  <h3>Pastes</h3>
    <div class="container-fluid">
      <% paste_data.each do |p| %>
        <!-- start of row -->
        <div class="row pastes">
          <div class="row">
            <div class="col-md-1 small">
              <image class="image_padding" src="/images/language-<%= p[:language] %>.png" height="25" width="25"/>
            </div>
            <div class="col-md-1 small"><%= p[:id]%></div>
            <div class="col-md-2 small"><%= p[:date]%></div>
            <div class="col-md-8 small"><%= p[:title]%></div>
          </div>
          <div class="row">
            <div class="col-md-10 language-<%= p[:lang_name]%>"><pre><code><%= p[:paste]%></code></pre></div>
            <div class="col-md-1">
              <button type="button" class="btn btn-default" onclick="window.location='/pastes/'+<%= p[:id]%>;">
                <span class="glyphicon glyphicon-edit"></span>
              </button>
            </div>
            <div class="col-md-1">
              <button type="button" class="btn btn-default" onclick="delete_paste(<%= p[:id]%>);">
                <span class="glyphicon glyphicon-remove"></span>
              </button>
            </div>
          </div>
        </div>
        <!-- end of row -->
      <% end unless paste_data.nil? %>
    </div>
</body>
</html>
