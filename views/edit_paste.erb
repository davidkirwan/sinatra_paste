<html>
<head>
<title>Edit Paste</title>
</head>
<script src="/js/jquery-2.1.3.min.js"></script>
<script src="/js/jquery-1.11.0.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/prism.js"></script>
<link rel="stylesheet" href="/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/bootstrap-theme.min.css">
<link rel="stylesheet" href="/css/prism.css">

<script src="/js/main.js"></script>
<link href="/css/main.css" rel="stylesheet" />

<body>
<h1>Edit Paste</h1>
  <div class="container-fluid">
    <div class="row-fluid">
      <form>
        <div class="col-md-12">
          <input class="paste-title" type="text" name="paste_title" id="paste_title" value="<%= paste_data[:title]%>"></input>
        </div>
        <div class="col-md-12">
          <textarea class="form-control paste-input" name="paste_input" id="paste_input"><%= paste_data[:paste] %></textarea>
        </div>
        <div class="col-md-2">
          <select name="paste_language" id="paste_language">
            <% case paste_data[:language]
             when "1" %>
              <option value="1" selected>Text</option>
              <option value="2">Javascript</option>
              <option value="3">Python</option>
              <option value="4">Ruby</option>
              <option value="5">C</option>
              <option value="6">C++</option>
              <option value="7">Java</option>
            <% when "2" %>
              <option value="1">Text</option>
              <option value="2" selected>Javascript</option>
              <option value="3">Python</option>
              <option value="4">Ruby</option>
              <option value="5">C</option>
              <option value="6">C++</option>
              <option value="7">Java</option>
            <% when "3" %>
              <option value="1">Text</option>
              <option value="2">Javascript</option>
              <option value="3" selected>Python</option>
              <option value="4">Ruby</option>
              <option value="5">C</option>
              <option value="6">C++</option>
              <option value="7">Java</option>
            <% when "4" %>
              <option value="1">Text</option>
              <option value="2">Javascript</option>
              <option value="3">Python</option>
              <option value="4" selected>Ruby</option>
              <option value="5">C</option>
              <option value="6">C++</option>
              <option value="7">Java</option>
            <% when "5" %>
              <option value="1">Text</option>
              <option value="2">Javascript</option>
              <option value="3">Python</option>
              <option value="4">Ruby</option>
              <option value="5" selected>C</option>
              <option value="6">C++</option>
              <option value="7">Java</option>
            <% when "6" %>
              <option value="1">Text</option>
              <option value="2">Javascript</option>
              <option value="3">Python</option>
              <option value="4">Ruby</option>
              <option value="5">C</option>
              <option value="6" selected>C++</option>
              <option value="7">Java</option>
            <% when "7" %>
              <option value="1">Text</option>
              <option value="2">Javascript</option>
              <option value="3">Python</option>
              <option value="4">Ruby</option>
              <option value="5">C</option>
              <option value="6">C++</option>
              <option value="7" selected>Java</option>
            <% end %>
          </select>
        </div>
      </form>
      <button id="post_button" onmousedown="edit_paste(<%= paste_data[:id] %>);">Save</button>
      <button id="post_button" onmousedown="cancel_edit();">Cancel</button>
    </row>
  </div>
</body>
</html>
